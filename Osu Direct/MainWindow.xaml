<Window x:Class="Osu_Direct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Osu_Direct" 
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="135" Width="225" StateChanged="Window_StateChanged" Loaded="Window_Loaded" >
    <Grid>
        <tb:TaskbarIcon Visibility="Visible" TrayLeftMouseDown="TaskbarIcon_TrayLeftMouseDown" Margin="0,404,524,0"/>
        <CheckBox x:Name="AutoStart" Content="Запускать вместе с Windows?" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" Height="17" Width="185" ClickMode="Release" Checked="AutoStart_Checked" Unchecked="AutoStart_Unchecked"/>
    </Grid>
</Window> 
